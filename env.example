# Environment Configuration Template
# Copy this file to .env and update the values

# Backend API Configuration
BACKEND_API_URL=http://localhost:8000
API_TIMEOUT=120
POLL_INTERVAL=2
USE_MOCK_DATA=true

# API Keys (for backend team to implement)
ACLED_API_KEY=your_acled_api_key_here
GDELT_API_KEY=your_gdelt_api_key_here
RELIEFWEB_API_KEY=your_reliefweb_api_key_here
WORLDBANK_API_KEY=your_worldbank_api_key_here

# LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Database Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db

# App Configuration
APP_TITLE=NGO Data Helpers
APP_VERSION=1.0.0
DEBUG=false

# File Storage
REPORTS_DIRECTORY=./reports
MAX_REPORT_SIZE_MB=50

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REPORTS_PER_HOUR=10
